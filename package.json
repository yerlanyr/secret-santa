{
  "name": "secret-santa",
  "version": "1.0.0",
  "description": "An app to do a secret santa\r Basically an app using htmx with support of any browser.",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "start": "npm run build & npm run start-server-heroku",
    "start-server-heroku": "node server/index.js",
    "start-server": "set DEBUG=express:* & node server/index.js",
    "build": "babel --config-file ./babel.config.json --out-dir dist ./server && node -e \"require('fs').cpSync('./server/public/style.css', './dist/public/style.css')\"",
    "clean": "node -e \"require('fs').rmSync('./dist', {force: true, recursive: true})\"",
    "start-dev": "nodemon --exec babel-node server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/node": "^7.22.19",
    "@kitajs/html": "^3.0.10",
    "express": "^4.16.4",
    "express-session": "^1.17.3",
    "raw-loader": "^4.0.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "nodemon": "^3.0.2"
  }
}
